<%= simple_form_for(@chapter) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, autofocus: true %>
    <%= f.association :project, autofocus: true, include_blank: false %>
    <%= f.input :reason, autofocus: true, input_html: {rows: 12, class: "summernote"}  %>
    <%= f.input :note, autofocus: true, input_html: {rows: 12, class: "summernote"}  %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
