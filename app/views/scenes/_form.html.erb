<%= simple_form_for(@scene) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.association :chapter, as: :select, include_blank: false %>
    <%= f.input :description, autofocus: true, label: false, input_html: {rows: 12, class: "summernote"} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
