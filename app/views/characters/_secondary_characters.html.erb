<% @secondary_characters.each do |character| %>
  <%= render partial: "modals/secondary_character_modal", locals: { character: character, project: @project } %>
  <div class="panel panel-default" data-id="<%= character.id %>" data-pos="<%= character.position %>">
    <div class="panel-body">
      <%= link_to "#", class: "modals", data: { :"toggle" => "modal", :"target" => ".secondaryCharacterModal-#{character.id}" } do %>
        <b><%= character.full_name %></b>
        <%= link_to character, method: :delete, class: "pull-right", data: { confirm: 'Are you sure?' } do %>
          <i class="fa fa-trash"></i>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>