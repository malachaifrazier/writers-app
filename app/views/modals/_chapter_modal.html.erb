<!-- Chapter Modal -->
<div class="modal fade chapterModal-<%= chapter.id %>"
 tabindex="-1" role="dialog" aria-labelledby="chapterModal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close col-lg-2" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <%= link_to 'Edit', edit_chapter_path(chapter), class: 'btn btn-primary btn-sm pull-right' %>
        <h4 class="modal-title">
          Chapter (<%= chapter.name %>)
        </h4>
      </div>

      <div class="modal-body">
        <%= simple_form_for(chapter) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :description, autofocus: true, label: false, input_html: {rows: 12, class: "summernote"} %>
            <%#= f.input :project_id, as: :hidden, input_html: {value: @project.to_param} %>
          </div>

          <div class="form-actions">
            <%= f.button :submit %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

</div>
