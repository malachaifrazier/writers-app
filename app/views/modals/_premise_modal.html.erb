<!-- Premise Modal -->
<div class="modal fade bs-example-modal-lg" id="premiseModal"
 tabindex="-1" role="dialog" aria-labelledby="premiseModal" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close col-lg-2" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">Premise</h4>
      </div>

      <div class="modal-body">
        <!-- <div class=""> -->
          <p>Describe the entire creative work in one sentence. Conflict and resolution.</p>
          <hr>
          <%= simple_form_for(@project) do |f| %>
            <%= f.error_notification %>

            <div class="form-inputs">
              <%= f.input :premise, autofocus: true, label: false, input_html: {rows: 12, class: "summernote"} %>
            </div>

            <div class="form-actions">
              <%= f.button :submit %>
            </div>
          <% end %>
        <!-- </div> -->
      </div>
    </div>
  </div>

</div>
