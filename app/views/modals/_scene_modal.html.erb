<!-- Location Modal -->
<div class="modal fade sceneModal-<%= scene.id %>"
 tabindex="-1" role="dialog" aria-labelledby="sceneModal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close col-lg-2" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <%= link_to 'Edit', edit_scene_path(scene), class: 'btn btn-primary btn-sm pull-right' %>
        <h4 class="modal-title"> <%= scene.title %> </h4>
      </div>

      <div class="modal-body">
        <%= simple_form_for(scene) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :description, autofocus: true, label: false, input_html: {rows: 12, class: "summernote"} %>
          </div>

          <div class="form-actions">
            <%= f.button :submit %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

</div>
