<!-- Scene Modal -->
<div class="modal fade" id="newSceneModal"
 tabindex="-1" role="dialog" aria-labelledby="newSceneModal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close col-lg-2" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title"> Create Scene </h4>
      </div>

      <div class="modal-body">
        <%= simple_form_for(@scene) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :title, autofocus: true %>
            <%= f.input :chapter_id, as: :hidden, input_html: {value: @chapter.to_param} %>
          </div>

          <div class="form-actions">
            <%= f.button :submit %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

</div>
