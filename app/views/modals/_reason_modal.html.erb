<!-- Chapter Reason Modal -->
<div class="modal fade bs-example-modal-lg" id="reasonModal"
 tabindex="-1" role="dialog" aria-labelledby="reasonModal" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close col-lg-2" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <%#= link_to 'Edit', edit_chapter_path(chapter), class: 'btn btn-primary btn-sm pull-right' %>
        <h4 class="modal-title"> <%= chapter.title %> Reason </h4>
      </div>

      <div class="modal-body">
        <p>What role does this chapter play? How does it contribute to the development of this project?</p>
        <hr>
        <%= simple_form_for(chapter) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :reason, autofocus: true, label: false, input_html: {rows: 12, class: "summernote"} %>
          </div>

          <div class="form-actions">
            <%= f.button :submit %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

</div>
