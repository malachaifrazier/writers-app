<!-- Fabula Modal -->
<div class="modal fade" id="strandModal"
 tabindex="-1" role="dialog" aria-labelledby="strandModal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close col-lg-2" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">Narrative Strands</h4>
      </div>

      <div class="modal-body">
        <p>Narrative strands, each one connected to the development of one specific conflict.</p>
        <hr>
        <%= simple_form_for(@strand) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :name, autofocus: true %>
            <%= f.input :project_id, as: :hidden, input_html: {value: @project.to_param} %>
          </div>

          <div class="form-actions">
            <%= f.button :submit %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

</div>
