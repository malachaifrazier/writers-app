<!-- Secondary Character Modal -->
<div class="modal fade secondaryCharacterModal-<%= character.id %>"
 tabindex="-1" role="dialog" aria-labelledby="secondaryCharacterModal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close col-lg-2" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <%= link_to 'Edit', edit_character_path(character), class: 'btn btn-primary btn-sm pull-right' %>
        <h4 class="modal-title">
          Character: <%= character.full_name %>
        </h4>
      </div>

      <div class="modal-body">
        <%= simple_form_for(character) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :first_name, autofocus: true %>
            <%= f.input :last_name, autofocus: true %>
            <%= f.association :project, autofocus: true, include_blank: false %>
          </div>

          <div class="form-actions">
            <%= f.button :submit %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

</div>
