<!-- New Location Modal -->
<div class="modal fade" id="newLocationModal"
 tabindex="-1" role="dialog" aria-labelledby="locationModal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close col-lg-2" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">Locations</h4>
      </div>

      <div class="modal-body">
        <%= simple_form_for(@location) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :name, autofocus: true,
              label: "Name of the locations (e.g. house on the beach, village square)" %>
            <%= f.input :nation, autofocus: true %>
            <%= f.input :state, autofocus: true %>
            <%= f.input :city, autofocus: true %>
            <%= f.association :project, as: :select, include_blank: false %>
            <%#= f.input :project_id, as: :hidden, input_html: {value: @project.to_param} %>
          </div>

          <div class="form-actions">
            <%= f.button :submit %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

</div>
