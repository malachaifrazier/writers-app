<p id="notice"><%= notice %></p>

<h1>
  All Scenes
  <%= link_to 'New Scene', new_scene_path, class: "btn btn-primary pull-right" %>
</h1>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Title</th>
      <th>Chapter</th>
      <th>Project</th>
      <th>Actions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @scenes.each do |scene| %>
      <tr>
        <td><%= scene.title %></td>
        <td><%= link_to scene.chapter.title, chapter_url(scene.chapter) %></td>
        <td><%= link_to scene.chapter.project.title, project_path(scene.chapter.project) %></td>
        <td><%= link_to 'Edit', edit_scene_path(scene) %></td>
        <td><%= link_to 'Destroy', scene, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>