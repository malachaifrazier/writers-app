<p id="notice"><%= notice %></p>

<h1>
  All Characters
  <%= link_to 'New Character', new_character_path, class: "btn btn-primary pull-right" %>
</h1>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Project</th>
      <th>Main Character</th>
      <th>Actions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @characters.each do |character| %>
      <tr>
        <td><%= character.full_name %></td>
        <td><%= link_to character.project.title, project_path(character.project) %></td>
        <td><%= character.main_character.to_s.titleize %></td>
        <td><%= link_to 'Show', character %></td>
        <td><%= link_to 'Edit', edit_character_path(character) %></td>
        <td><%= link_to 'Destroy', character, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>