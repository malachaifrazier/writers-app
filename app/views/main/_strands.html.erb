<p id="notice"><%= notice %></p>

<h1>
  All Strands
  <%= link_to 'New Strand', new_strand_path, class: "btn btn-primary pull-right" %>
</h1>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Project</th>
      <th>Actions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @strands.each do |strand| %>
      <tr>
        <td><%= strand.name %></td>
        <td><%= link_to strand.project.title, project_path(strand.project) %></td>
        <!-- <td><%#= link_to 'Show', strand %></td> -->
        <td><%= link_to 'Edit', edit_strand_path(strand) %></td>
        <td><%= link_to 'Destroy', strand, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>